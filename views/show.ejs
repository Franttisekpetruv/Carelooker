<% layout('/layouts/bp') %>

    <div class="container">
        <link rel="stylesheet" type="text/css" href="/css/home.css">

        <div class="banner">

            <img id="bannerimg" src="<%= hospital.Image%>" alt="">
            <h2 id="hsTitle">
                <%= hospital.Name %>
            </h2>
        </div>

        <div class="hero">

            <ul class="features">
                <li>
                    Staffed Beds:
                    <%= hospital.StaffedBeds%>
                </li>
                <li>
                    Location:
                    <%= hospital.City%>
                </li>
            </ul>

            <a href="/edit/<%=hospital._id%>">edit</a>


            <form action="/show/<%=hospital._id%>/reviews" method="POST">
                <input type="range" min="1" max="5" name="Review[Rating]" id="">
                <div class="review">
                    <label for="Title">Title</label>
                    <textarea name="Review[Title]" id="Title" cols="30" rows="1"></textarea>
                    <label for="Body">Body</label>
                    <textarea name="Review[Body]" id="Body" cols="30" rows="4"></textarea>
                    <label for="Tags">Tags</label>
                    <textarea name="Review[Tags]" id="Body" cols="30" rows="1"></textarea>
                </div>
                <button id="submit" type="submit">Submit</button>
            </form>


            <div>
                <% for(let review of hospital.Reviews) { %>
                    <h2>
                        <%= review.Body %>
                    </h2>
                    <form action="/show/<%=hospital._id%>/reviews/<%=review._id%>?method=DELETE" method="POST">
                        <button>Delete</button>
                        <%} %>
            </div>
        </div>
    </div>